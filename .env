# ========================================
# CONFIGURAÇÃO PARA TESTES - CHATBOT WHATSAPP
# ========================================

# === Configurações da IA ===
# URL do Ollama rodando localmente
OLLAMA_BASE_URL=http://127.0.0.1:11434
# Modelo da IA - ajuste conforme seu modelo instalado
LLM_MODEL=llama3.1

# === Configurações do WhatsApp via WAHA ===
# URL base do serviço WAHA
WAHA_BASE_URL=https://waha.devlike.pro
# Sua chave API do WAHA (obtenha em waha.devlike.pro)
WAHA_API_KEY=your_api_key_here
# Nome da sessão WhatsApp (pode manter como default)
WHATSAPP_SESSION_NAME=default

# === Configurações do Bot ===
# Tempo limite para sessão inativa (em minutos)
BOT_TIMEOUT_MINUTES=30
# Máximo de mensagens mantidas no contexto
MAX_CONTEXT_MESSAGES=10

# === Configurações para Desenvolvimento Local ===
# URL pública do seu servidor (para webhooks)
# Se estiver usando ngrok, coloque a URL do ngrok aqui
# Exemplo: https://abc123.ngrok.io
# Se estiver usando Repl.it, use: https://seu-repl.seu-usuario.repl.co
PUBLIC_WEBHOOK_URL=http://localhost:8000

# === Configurações da Base de Dados ===
# (Suas configurações de BD já devem estar em outro arquivo)
# Manter as configurações existentes da base Oracle

# === Configurações de Logging ===
LOG_LEVEL=INFO
LOG_FILE=logs/log_bot.log

# === Configurações de Desenvolvimento ===
# Modo debug (True para desenvolvimento, False para produção)
DEBUG_MODE=True
# Porta para rodar a aplicação
PORT=8000